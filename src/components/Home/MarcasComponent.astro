---
import { Image } from "astro:assets";
import lacteos from "../../assets/images/home/products/Logolacteo.svg";
import carnico from "../../assets/images/home/products/Logocarnico.svg";
import quesos from "../../assets/images/home/products/LogoQuesos.svg";
---

<section class="mx-auto p-8">
  <div
    class="flex flex-col lg:flex-row items-center justify-around max-w-screen-xl mx-auto"
  >
    <div>
      <h2 class="text-xl font-semibold">Disfruta de nuestras</h2>
      <h1 class="text-6xl font-bold">marcas</h1>
    </div>
    <div class="flex justify-around w-full gap-4">
      <Image
        src={lacteos}
        alt="Lacteos"
        class="filter grayscale hover:filter-none transition duration-300 ease-in-out object-contain w-1/3 lg:w-40"
      />
      <Image
        src={carnico}
        alt="carnico"
        class="filter grayscale hover:filter-none transition duration-300 ease-in-out object-contain w-1/3 lg:w-40"
      />
      <Image
        src={quesos}
        alt="quesos"
        class="filter grayscale hover:filter-none transition duration-300 ease-in-out object-contain w-1/3 lg:w-40"
      />
    </div>
  </div>
  <div class="flavor"></div>
</section>
