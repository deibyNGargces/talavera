---
import { Image } from "astro:assets";
import lacteos from "../../assets/images/home/products/Logolacteo.svg";
import carnico from "../../assets/images/home/products/Logocarnico.svg";
import quesos from "../../assets/images/home/products/LogoQuesos.svg";
import montecito from "../../assets/images/home/products/Logomontecito.svg";
---

<div class="slider w-screen overflow-x-hidden">
  <div class="slide-track">
    <div class="slide">
      <Image
        class="filter grayscale hover:filter-none transition duration-300 ease-in-out object-contain w-1/3 lg:w-40"
        src={lacteos}
        alt="imagen1"
      />
    </div>
    <div class="slide">
      <Image
        class="filter grayscale hover:filter-none transition duration-300 ease-in-out object-contain w-1/3 lg:w-40"
        src={carnico}
        alt="imagen1"
      />
    </div>
    <div class="slide">
      <Image
        class="filter grayscale hover:filter-none transition duration-300 ease-in-out object-contain w-1/3 lg:w-40"
        src={quesos}
        alt="imagen1"
      />
    </div>
    <div class="slide">
      <Image
        class="filter grayscale hover:filter-none transition duration-300 ease-in-out object-contain w-1/3 lg:w-40"
        src={montecito}
        alt="imagen1"
      />
    </div>
    <div class="slide">
      <Image
        class="filter grayscale hover:filter-none transition duration-300 ease-in-out object-contain w-1/3 lg:w-40"
        src={lacteos}
        alt="imagen1"
      />
    </div>
    <div class="slide">
      <Image
        class="filter grayscale hover:filter-none transition duration-300 ease-in-out object-contain w-1/3 lg:w-40"
        src={carnico}
        alt="imagen1"
      />
    </div>
    <div class="slide">
      <Image
        class="filter grayscale hover:filter-none transition duration-300 ease-in-out object-contain w-1/3 lg:w-40"
        src={quesos}
        alt="imagen1"
      />
    </div>
    <div class="slide flex items-center">
      <Image
        class="filter grayscale hover:filter-none transition duration-300 ease-in-out object-contain w-1/3 lg:w-40"
        src={montecito}
        alt="imagen1"
      />
    </div>
  </div>
</div>

<style>
  .slider {
    /* width: 75vw; */
    overflow: hidden;
    margin: auto;
    height: auto;
  }

  .slider .slide-track {
    display: flex;
    gap: 4rem;
    animation: scroll 40s linear infinite;
    --webkit-animation: scroll 60s linear infinite;
    width: calc(300px * 8);
  }

  .slider .slide {
    width: 300px;
  }
  .slide {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .slider .slide {
    width: 100%;
    /* height: auto; */
    object-fit: cover;
  }

  .slider .slide img:hover {
    transform: scale(1.01);
    transition: all 0.3s ease-in-out;
  }

  @keyframes scroll {
    0% {
      -webkit-transform: translateX(0);
      transform: translateX(0);
    }

    100% {
      -webkit-transform: translateX(calc(-300px * 4));
      transform: translateX(calc(-300px * 4));
    }
  }
</style>

