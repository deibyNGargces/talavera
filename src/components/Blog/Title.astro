---
export interface TitleProps {
  title: string;
  title2: string;
  subtitle: string;
  date: string;
}

const { title, title2, subtitle, date } = Astro.props;
---

<div class="">
  <h1 class="text-4xl font-bold text-center">{title}</h1>
  <h2 class="text-2xl font-bold text-center">{title2}</h2>
  <p class="text-center text-gray-300 mt-2">{subtitle} {date}</p>
  <hr class="my-8" />
</div>
